{
  "manifest_version": 3,
  "name": "Earburn",
  "version": "1.1",
  "description": "Identify pages that support IndieWeb Webmentions.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "icons/ear-48.png",
    "96": "icons/ear-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "urlrat@example.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["earburn.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "earburn-bg.js"
  },
  "browser_action": {
    "default_icon": "icons/ear-96.png",
    "default_popup": "popup/hcard.html",
    "default_title": "Earburn"
  }
}
